<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SmartERP.ModuleEditor.ReactiveUI.Views.Forms.CustomModuleFormView">

  <StackPanel>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <Button Grid.Column="0" Command="{Binding GenerateButton_Click}"
              HorizontalAlignment="Left"
              IsEnabled="{Binding CanGenerate}">
        Generate
      </Button>
      
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Command="{Binding SaveButton_Click}">Save</Button>
        <Button Command="{Binding CloseButton_Click}">Cancel</Button>
      </StackPanel>
    </Grid>

    <TextBlock>Module Name</TextBlock>
    <TextBox Text="{Binding Module.Name}"></TextBox>
    
    <TextBlock>Display Name</TextBlock>
    <TextBox Text="{Binding Module.DisplayName}"></TextBox>
    
    <TextBlock>Description</TextBlock>
    <TextBox Text="{Binding Module.Description}"></TextBox>
    
    <TextBlock>Entities</TextBlock>
    
  </StackPanel>
  
</UserControl>
